<%= form_for @crypto, url: cryptos_path, method: :post do |form| %>
  <span id="input"><%= form.text_field :data, required: true, pattern: "[a-zA-Z0-9]+", placeholder: 'Blockchain' %> </span>
  <div class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition ease-in-out delay-150 bg-blue-500 hover:-translate-y-1 hover:scale-110 hover:bg-indigo-500 duration-300">
    <%= form.submit "ADD" %>
  </div>
<% end %>
